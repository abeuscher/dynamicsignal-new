extends inc/page.pug
block template
	:php
		/*
		Template Name: Blog Page
		*/
block content
	-
		var pageData = {
		"header":"Blog",
		"ctaLink":"/blog/",
		"ctaLabel":"Subscribe via RSS"
		 };
	section.hero#page-top
		.container
			.row
				h1!=pageData.header
				h2
					a(href=pageData.ctaLink)!=pageData.ctaLabel
	section.blog-entries
		:php
			$paged = ( get_query_var( 'paged' ) ) ? get_query_var( 'paged' ) : 1;
			$query = new WP_Query( array('post_type' => 'post','paged' => $paged) );
			if( $query->have_posts() ) {
					while( $query->have_posts() ) {
							$query->the_post();
		article
			:php
				echo "<a class='blog-header' href='".get_the_permalink()."'><div class='blog-thumb'>";
				the_post_thumbnail( 'full', array('class' => 'img-responsive') );
				echo "</div>";
				echo "<span class='blog-date'>".get_the_date()."</span>";
				echo "</a>";
			.blog-info
				h1.blog-title
					:php
						the_title();
				.blog-excerpt
					:php
						the_excerpt();
				.blog-tags
					:php
						if( has_tag() ) {
							echo "<p class='blog-tags'>";
							the_tags( false );
							echo "</p>";
						}

		:php
			}};
		.row
			.col-md-12.pagination
				:php
					$big = 999999999;
						echo paginate_links( array(
																				'base' => str_replace( $big, '%#%', esc_url( get_pagenum_link( $big ) ) ),
																				'format' => '?paged=%#%',
																				'current' => max( 1, get_query_var('paged') ),
																				'total' => $query->max_num_pages
																			)
						);
