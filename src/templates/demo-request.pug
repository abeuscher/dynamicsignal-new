extends inc/page.pug
block template
  :php
    /*
    Template Name: Demo Request Form
    */
block nav
  include ./inc/header.pug
block content
  section.top-section-interior
    .container
      .row
        .col-md-12
          include ./inc/breadcrumbs.pug
          h1 Request A Demo
          h2 Your Employee Communication and Engagement Platform
  section.bottom-cta.mobile-cta
    .container
      .row
        .col-md-12
          h2 Download and Try DySi Open
          p Get a hands on demonstration of our mobile app!
          ul.app-buttons.hmenu
            li
              a(href="itms://appstore.com/us/app/dysi-open/id1339399649?mt=8",target="_blank")
                img(src=themeDir + "/images/btn-itunes.png")
            li
              a(href="https://play.google.com/store/apps/details?id=com.dynamicsignal.appstore.dysi&hl=en",target="_blank")
                img(src=themeDir + "/images/btn-android.png")
  section.signup-form-bucket.container
    .row
      .col-md-6
        div(style='text-align: center;')
          img(src=themeDir+'images/pic-demo-request.jpg', alt='')
        p A member of our team will be in touch to schedule a personalized look at the Dynamic Signal platform.
        ul.demo-list.fa-ul
          li
            i.fa-li.fa.fa-check
            | Keep employees informed
          li
            i.fa-li.fa.fa-check
            | Increase engagement
          li
            i.fa-li.fa.fa-check
            | Retain your top talent
          li
            i.fa-li.fa.fa-check
            | Boost productivity
          li
            i.fa-li.fa.fa-check
            | Empower advocacy
      .col-md-6
        script(src='//app-ab04.marketo.com/js/forms2/js/forms2.min.js')
        script(src='//www.google.com/recaptcha/api.js')
        #marketo-form-wrapper
          form.marketo-form#mktoForm_1163
            script(src='https://www.linkedin.com/autofill/js/autofill.js', type='text/javascript', async='')
            script(type='IN/Form2', data-form='mktoForm_1163', data-field-firstname='FirstName', data-field-lastname='LastName', data-field-phone='Phone', data-field-company='Company', data-field-title='Title', data-field-state='State', data-field-country='Country', data-field-email='LinkedIn Is Lazy').
            .g-recaptcha(data-sitekey="6LcIMj8UAAAAAKLVThL8d92zO943EwUf6UNd8E5J")
            script.
              var validateCorporateEmail = true;
        p#required-warning
          span.asterisk *
          |  all fields are required.
  section.bottom-cta.desktop-cta
    .container
      .row
        .col-md-12
          h2 Download and Try DySi Open
          p Get a hands on demonstration of our mobile app!
          ul.app-buttons.hmenu
            li
              a(href="itms://itunes.apple.com/us/app/dysi-open/id1339399649?mt=8",target="_blank")
                img(src=themeDir + "/images/btn-itunes.png")
            li
              a(href="https://play.google.com/store/apps/details?id=com.dynamicsignal.appstore.dysi&hl=en",target="_blank")
                img(src=themeDir + "/images/btn-android.png")
