block template
- var themeDir = "/wp-content/themes/ds-new/"
doctype html
html
  head
    meta(charset="UTF-8")
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    link(rel='shortcut icon', href='favicon.ico?v=3')
    :php
      $title = get_the_title();
      $link = get_the_permalink();
      echo "<title>$title</title>";
      echo "<meta property='og:url' content='$link' />";
      $slink = get_template_directory_uri() . "/style.css?v=" . filemtime( get_stylesheet_directory() . '/style.css');
      echo "<link href='$slink' rel='stylesheet' />";
  body
    include ./header.pug
    block content
    include ./footer.pug
    :php
      $slink = get_template_directory_uri() . "/js/bundle.js?v=" . filemtime( get_stylesheet_directory() . '/js/bundle.js');
      echo "<script src='$slink'></script>";
