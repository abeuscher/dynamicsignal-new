extends inc/page.pug
block template
  :php
    /*
    Template Name: Press Releases Page
    */
block nav
  include ./inc/navbar-toggle.pug
  include ./inc/side-nav.pug
  include ./inc/header.pug
block content
  :php
    $breadcrumbs = [];
    array_push($breadcrumbs,array(
      "title"=>"Company",
      "link"=>"/company/"
    ));
  section.top-section-interior
    .container
      .row
        .col-md-12
          include ./inc/breadcrumbs.pug
          h1
            :php
              the_title();
  section.container#main-content
    :php
      if( have_posts() ): while( have_posts() ): the_post();
    article.blog-post
      .blog-post-body
        :php
          the_content();
    :php
      endwhile;
      endif;
