          'meta_key'   => 'event_start_date',
          'orderby'    => 'event_start_date',
          'meta_type' => 'date',
          'order'      => 'ASC',
          'paged' => true,
          'meta_query' => array(
            array(
              'key' => 'ds_event_type',
              'value' => 'cswebinar',
              'compare' => '!='
