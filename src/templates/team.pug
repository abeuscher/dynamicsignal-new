extends inc/page.pug
block template
  :php
    /*
    Template Name: Team Page
    */
block nav
  include ./inc/header.pug
block content
  -
    var pageData = {
    "header":"Meet Our Team",
    "subheader":"From our founders to our board of directors... across our entire staff - We believe Communications Technology is a critical component for the success of world-class organizations."
    };
  include ./inc/hero.pug
  section.team-members.container
    :php
      if( have_rows('ds_team_section') ) {
        while ( have_rows('ds_team_section') ) {
            $res = the_row();
    .row.team-header
      .col-md-12
        h2
          :php
            $type = $res["ds_team_section_name"]=="Executives";
            echo $res["ds_team_section_name"];
    .row.team-list
      .col-md-12
        :php
              foreach($res["ds_team_member"] as $key=>$player) {
                echo "<a class='exec-thumb' href='".($type?"/team/".$player["ds_team_member_first_name"]:$player["ds_team_member_linkedin_profile_url"])."'  data-bg='".$player["ds_team_member_image"]."'><h3>".$player["ds_team_member_first_name"]."</h3><h4>".($type?$player["ds_team_member_job_title"]:"<i class='fa fa-linkedin-square'></i>")."</h4></a>";
              }
    :php
            }
          }
