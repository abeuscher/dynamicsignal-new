block content
  :php
    $breadcrumbs = [];
    array_push($breadcrumbs,array(
      "title"=>"Careers",
      "link"=>"/careers/"
    ));
    if( have_posts() ): while( have_posts() ): the_post();
    $quotes = json_encode(get_field("quotes"));
    echo "<script>var pageData = {'quotes':".$quotes
    ."};</script>";
    printf("<section class='top-section' id='company-header' data-bg-array='%s'>", json_encode(get_field("header_image"),JSON_UNESCAPED_SLASHES));
  .inner
    h1 
      :php
        echo get_field("header_text");
  :php
    echo "</section>";
  section.container
    .row
      .col-md-8.blog-content
        :php
          the_content();
